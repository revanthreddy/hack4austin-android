<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SessionBasicInfoContActivity"
    tools:ignore="HardcodedText" >

    <TextView
        android:id="@+id/activitybasicinfocont_textview_HomeMovePlansLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Plans to Move Homes Soon ?"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/activitybasicinfocont_radiogroup_HomeMovePlans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/activitybasicinfocont_radiogroup_HomeMovePlanYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/Yes" />

        <RadioButton
            android:id="@+id/activitybasicinfocont_radiogroup_HomeMovePlanNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/No" />
    </RadioGroup>

    <TextView
        android:id="@+id/activitybasicinfocont_textview_AdoptionPlansLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Student will be adopted Soon? "
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/activitybasicinfocont_radiogroup_AdoptionPlans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/activitybasicinfocont_radiogroup_AdoptionPlanYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/Yes" />

        <RadioButton
            android:id="@+id/activitybasicinfocont_radiogroup_AdoptionPlanNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/No" />
    </RadioGroup>

    <TextView
        android:id="@+id/activitybasicinfocont_textview_FosterParentsHomeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Were Foster parents at home during Lesson ?"
        android:textStyle="bold" />
    
    <RadioGroup
        android:id="@+id/activitybasicinfocont_radiogroup_FosterParentsHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/activitybasicinfocont_radiogroup_FosterParentsHomeYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/Yes" />

        <RadioButton
            android:id="@+id/activitybasicinfocont_radiogroup_FosterParentsHomeYesNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/No" />
    </RadioGroup>

    <Button
        android:id="@+id/activitybasicinfocont_button_Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Next : Lesson Mechanics" />

</LinearLayout>
