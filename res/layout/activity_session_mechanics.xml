<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout 
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SessionMechanicsActivity"
    tools:ignore="HardcodedText" >
    
    <TextView
        android:id="@+id/activitymechanics_textview_onTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Was your student on Time ?"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/activitymechanics_radiogroup_onTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/activitymechanics_radiogroup_onTimeYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/Yes" />

        <RadioButton
            android:id="@+id/activitymechanics_radiogroup_onTimeNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/No" />
    </RadioGroup>

    <TextView
        android:id="@+id/activitymechanics_textview_preparedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Was your student prepared ? "
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/activitymechanics_radiogroup_prepared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/activitymechanics_radiogroup_preparedYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/Yes" />

        <RadioButton
            android:id="@+id/activitymechanics_radiogroup_preparedNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/No" />
    </RadioGroup>

    <TextView
        android:id="@+id/activitymechanics_textview_practiceRegularLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has your student been practicing regularly ?"
        android:textStyle="bold" />
    
    <RadioGroup
        android:id="@+id/activitymechanics_radiogroup_participateRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/activitymechanics_radiogroup_participateRegularYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/Yes" />

        <RadioButton
            android:id="@+id/activitymechanics_radiogroup_participateRegularNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/No" />
    </RadioGroup>

    <TextView
    android:id="@+id/activitymechanics_textview_lessonEngageLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Was the student engaged during Lesson ?"
    android:textStyle="bold" />
    
    <RadioGroup
        android:id="@+id/activitymechanics_radiogroup_lessonEngage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/activitymechanics_radiogroup_lessonEngageYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/Yes" />

        <RadioButton
            android:id="@+id/activitymechanics_radiogroup_lessonEngageNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/No" />
    </RadioGroup>
    
    <Button
        android:id="@+id/activitymechanics_button_Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Next : Session Mechanics Cont" />

</LinearLayout>
</ScrollView>